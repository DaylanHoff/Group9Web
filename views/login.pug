extends layout.pug
block content
    <section id="showcase">
    <div class="container">
    block content
        h2="Please Login"
        if(message)
            div(class="error")=message
        div(class="forms")=forms
            form(action="/user/Login", method="Post")
                div
                    label="Username:"
                    input(type="text", name="username")
                div
                    label="Password:"
                    input(type="password", name="password")
                input(type="submit", value="Login")
